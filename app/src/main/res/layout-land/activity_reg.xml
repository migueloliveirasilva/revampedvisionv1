<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/logo1"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="267dp" />

    <EditText
        android:id="@+id/et_registo_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Insira o seu email"
        android:minWidth="200sp"
        android:textSize="15dp"></EditText>

    <EditText
        android:id="@+id/et_registo_password"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Insira a sua passe"
        android:inputType="textPassword"
        android:minWidth="200sp"
        android:textSize="15dp"></EditText>
    <EditText
        android:id="@+id/et_registo_password1"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Repita a sua passe"
        android:inputType="textPassword"
        android:minWidth="200sp"
        android:textSize="15dp"></EditText>

    <Button
        android:id="@+id/bt_registo_registar"
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/hack_bold"
        android:gravity="center"
        android:text="Registar"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="14dp"

        />


</LinearLayout>