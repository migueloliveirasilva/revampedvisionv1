<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".temperatura"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_term"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/t1"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/icon_temp"
            android:layout_width="181dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            android:layout_marginTop="125dp"
            app:srcCompat="@drawable/gelo" />
        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_temp"
            android:layout_gravity="center"
            android:fontFamily="@font/hack_regular"
            android:text="Temperatura:"

            android:textColor="@color/azul_rv"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_temp1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tv_temp"
            android:text=""
            android:textSize="45dp"
            android:layout_alignBottom="@+id/tv_temp"
            android:fontFamily="@font/hack_regular"
            android:textColor="@color/azul_rv"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_temp"
            android:layout_gravity="center"
            android:fontFamily="@font/hack_regular"
            android:text="Humidade:"

            android:textColor="@color/azul_rv"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_hum1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tv_temp"
            android:text=""
            android:textSize="45dp"
            android:layout_alignBottom="@+id/tv_temp"
            android:fontFamily="@font/hack_regular"
            android:textColor="@color/azul_rv"
            android:layout_gravity="center"/>





    </LinearLayout>
</LinearLayout>